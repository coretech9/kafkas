<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <LangVersion>10</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <Title>Coretech9.Kafkas</Title>
        <Product>Coretech9.Kafkas</Product>
        <AssemblyVersion>2.5.0</AssemblyVersion>
        <FileVersion>2.5.0</FileVersion>
        <PackageVersion>2.5.0</PackageVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Coretech9;Ertuğrul Helvacıköylü;Mehmet Helvacıköylü</Authors>
        <PackageProjectUrl>https://github.com/coretech9/kafkas</PackageProjectUrl>
        <PackageLicense>https://github.com/coretech9/kafkas/blob/main/LICENSE</PackageLicense>
        <RepositoryUrl>https://github.com/coretech9/kafkas</RepositoryUrl>
        <Description>C# Consumer Client Implementation for Apache Kafka</Description>
        <PackageTags>apache,kafka,consumer,producer</PackageTags>
        <TargetFrameworks>net7.0;net8.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DocumentationFile>bin\Debug\Coretech9.Kafkas.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>bin\Release\Coretech9.Kafkas.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Confluent.Kafka" Version="2.5.2" />
      <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
      <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
    </ItemGroup>

</Project>
